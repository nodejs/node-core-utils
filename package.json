{
  "name": "node-core-utils",
  "version": "1.28.0",
  "description": "Utilities for Node.js core collaborators",
  "bin": {
    "get-metadata": "./bin/get-metadata",
    "git-node": "./bin/git-node",
    "ncu-config": "./bin/ncu-config",
    "ncu-team": "./bin/ncu-team",
    "ncu-ci": "./bin/ncu-ci"
  },
  "scripts": {
    "test": "npm run test-unit && npm run lint",
    "test-unit": "mocha test/unit/*.test.js",
    "test-all": "mocha test/**/*.test.js",
    "coverage": "nyc --reporter=html --reporter=text --reporter=text-summary npm test",
    "coverage-all": "nyc --reporter=lcov --reporter=text --reporter=text-summary npm run test-all",
    "report-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "lint": "eslint . \"bin/*\" --cache",
    "lint-fix": "eslint . \"bin/*\" --fix"
  },
  "author": "Joyee Cheung <joyeec9h3@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:nodejs/node-core-utils.git"
  },
  "files": [
    "lib/",
    "bin/",
    "components/"
  ],
  "license": "MIT",
  "dependencies": {
    "branch-diff": "^1.10.0",
    "chalk": "^4.1.0",
    "changelog-maker": "^2.5.0",
    "cheerio": "^1.0.0-rc.5",
    "clipboardy": "^2.3.0",
    "core-validate-commit": "^3.13.3",
    "execa": "^5.0.0",
    "figures": "^3.2.0",
    "form-data": "^4.0.0",
    "fs-extra": "^9.1.0",
    "ghauth": "^4.0.0",
    "inquirer": "^7.3.3",
    "listr": "^0.14.3",
    "listr-input": "^0.2.1",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.1",
    "ora": "^5.3.0",
    "proxy-agent": "^4.0.1",
    "replace-in-file": "^6.2.0",
    "rimraf": "^3.0.2",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "eslint": "^7.20.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^4.1.0",
    "intelli-espower-loader": "^1.0.1",
    "mocha": "^8.3.0",
    "nyc": "^15.1.0",
    "power-assert": "^1.6.1",
    "sinon": "^9.2.4"
  }
}
